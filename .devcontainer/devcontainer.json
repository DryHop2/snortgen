{
  "name": "Python Dev",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "dev",
  "workspaceFolder": "/app",

  "customizations": {
    "vscode": {
      "extensions": ["ms-python.python", "ms-python.vscode-pylance"],
      "settings": {
        "python.defaultInterpreterPath": "/opt/.venv/bin/python"
      }
    }
  },

  "postCreateCommand": "pip install --upgrade pip"
}
